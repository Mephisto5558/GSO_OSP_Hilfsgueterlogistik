{
  "name": "gso_osp_hilfsgueterlogistik",
  "version": "0.0.0",
  "description": "Hilfsgueterlogistik-Verwaltung ueber eine Weboberflaeche",
  "keywords": [
    "logistics"
  ],
  "homepage": "https://github.com/Mephisto5558/GSO_OSP_Hilfsgueterlogistik#readme",
  "bugs": {
    "url": "https://github.com/Mephisto5558/GSO_OSP_Hilfsgueterlogistik/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mephisto5558/GSO_OSP_Hilfsgueterlogistik.git"
  },
  "license": "MIT",
  "author": "GSO FIA3D OSP Team 1",
  "type": "module",
  "main": "dist/backend/index.js",
  "types": "dist/backend/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --build src/backend",
    "build:frontend": "tsc --project src/frontend --noEmit && vite build",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:ci": "eslint . --format @microsoft/eslint-formatter-sarif --output-file eslint-results.sarif",
    "start": "node dist/backend/index.js",
    "watch": "conc -n \"TSC,VITE\" -c \"blue,magenta\" --pad-prefix \"npm:watch:backend\" \"npm:watch:frontend\"",
    "watch:backend": "npm run build:backend -- --watch --preserveWatchOutput",
    "watch:frontend": "vite"
  },
  "dependencies": {
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@mephisto5558/better-types": "latest",
    "@mephisto5558/eslint-config": "latest",
    "@microsoft/eslint-formatter-sarif": "latest",
    "@types/node": "24.x",
    "concurrently": "latest",
    "esbuild": "latest",
    "rimraf": "latest",
    "typescript": "latest",
    "vite": "7.3.x",
    "vite-tsconfig-paths": "6.x"
  },
  "engines": {
    "node": ">=24.13.0"
  }
}
