{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend",
      "program": "${workspaceFolder}/dist/backend/index.js",
      "preLaunchTask": "npm: build:backend",
      "runtimeArgs": ["--enable-source-maps", "--nolazy", "--watch"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ]
}